<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentsattendance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.DetailViewActivity" />
        <activity android:name=".view.TitleActivity" />
        <activity android:name=".view.StatisticsActivity" />
        <activity android:name=".view.ViewAttendanceActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity
            android:name=".view.HomeActivity"
            android:theme="@style/AppThemeDark" />
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.TakeAttendanceActivity"
            android:theme="@style/AppThemeDark" />
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>